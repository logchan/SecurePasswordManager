<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="hk.ust.ustac.team8.securepasswordmanager.HashingResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/PageTitle"
            android:text="@string/title_activity_hashing_result"
            />

        <TextView
            style="@style/PageSubTitle"
            android:text="@string/subtitle_activity_hashing_result"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hashing_result_change_fontsize"
            android:paddingLeft="15dp"
            />

        <SeekBar
            android:id="@+id/hashingResultSizeSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:max="50"
            android:progress="22"
            />

        <TextView
            android:id="@+id/hashingResultTextView"
            android:paddingBottom="15dp"
            style="@style/HashingResultTheme"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            style="@style/ButtonTheme"
            android:text="@string/copy_hashing_result"
            android:layout_width="match_parent"
            android:id="@+id/hashingResultCopyBtn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    style="@style/ButtonTheme.Filled"
                    android:text="@string/go_back"
                    android:id="@+id/hashingResultBackBtn"/>
                <Button
                    style="@style/ButtonTheme.Filled"
                    android:text="@string/done"
                    android:id="@+id/hashingResultDoneBtn"/>
            </LinearLayout>

    </LinearLayout>

</RelativeLayout>
