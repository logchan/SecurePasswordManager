<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="hk.ust.ustac.team8.securepasswordmanager.MainActivity">

    <TextView
        style="@style/PageTitle"
        android:text="@string/title_activity_main"
        />

    <TextView
        style="@style/PageSubTitle"
        android:text="@string/subtitle_activity_main"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainBottomLinear"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <TextView
                style="@style/TextViewTheme"
                android:layout_width="match_parent"
                android:gravity="center"
                android:autoLink="web"
                android:text="@string/help_main"
                />

            <TextView
                style="@style/TextViewTheme"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="@string/credit_main"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/mainBottomLinear"
            android:orientation="vertical">

            <Button
                style="@style/ButtonTheme.MainActivity"
                android:text="@string/generate_password"
                android:id="@+id/mainGenPwdBtn"
                />

            <Button
                style="@style/ButtonTheme.MainActivity"
                android:text="@string/manage_schemes"
                android:id="@+id/mainManScheBtn"
                />

            <Button
                style="@style/ButtonTheme.MainActivity"
                android:text="@string/manage_saved_information"
                android:id="@+id/mainManInfoBtn"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
