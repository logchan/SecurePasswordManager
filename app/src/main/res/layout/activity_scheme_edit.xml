<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="hk.ust.ustac.team8.securepasswordmanager.SchemeEditActivity">

    <TextView
        style="@style/PageTitle"
        android:text="@string/title_activity_scheme_edit"
        />

    <TextView
        style="@style/PageSubTitle"
        android:text="@string/subtitle_activity_scheme_edit"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/schemeEditBottomLinear"
            >

            <Button
                style="@style/ButtonTheme.Filled"
                android:text="@string/go_back"
                android:id="@+id/schemeEditBackBtn"
                />

            <Button
                style="@style/ButtonTheme.Filled"
                android:layout_weight="0.5"
                android:text="@string/add_field"
                android:id="@+id/schemeEditAddBtn"
                />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/schemeEditBottomLinear"
            android:id="@+id/schemeEditList"
            />

    </RelativeLayout>

</LinearLayout>
