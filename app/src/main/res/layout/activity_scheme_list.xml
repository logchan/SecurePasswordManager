<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="hk.ust.ustac.team8.securepasswordmanager.SchemeListActivity"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/schemeListTitleRelativeLayout"
        >

        <TextView
            android:text="@string/view_Scheme"
            style="@style/PageTitle"
            />
    </RelativeLayout>
    <Button
        android:text="@string/go_back"
        android:layout_width="wrap_content"
        style="@style/ButtonTheme"
        android:id="@+id/schemelistbackbtn"
        android:layout_height="40dp" />

    <LinearLayout
        android:id="@+id/schemeListLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        >


        <ListView
            android:id="@+id/schemeList"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</LinearLayout>
