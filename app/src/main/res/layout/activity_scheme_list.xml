<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="hk.ust.ustac.team8.securepasswordmanager.SchemeListActivity"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/schemeListTitleRelativeLayout"
        >

        <TextView
            android:text="@string/title_activity_scheme_list"
            style="@style/PageTitle"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/schemeListLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >

        <Button
            android:text="@string/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schemeListBackBtn"
            android:layout_alignParentBottom="true"
            style="@style/ButtonTheme"
            />

        <ListView
            android:id="@+id/schemeList"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/schemeListBackBtn"
            />

    </RelativeLayout>

</LinearLayout>
