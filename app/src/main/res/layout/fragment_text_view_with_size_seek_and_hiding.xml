<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             tools:context="hk.ust.ustac.team8.securepasswordmanager.TextViewWithSizeSeekAndHiding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hashing_result_change_fontsize"
        android:paddingLeft="15dp"
        />

    <SeekBar
        android:id="@+id/tvssTextSizeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:max="50"
        android:progress="22"
        />

    <TextView
        android:id="@+id/tvssText"
        android:paddingBottom="15dp"
        style="@style/HashingResultTheme"
        />

</LinearLayout>
